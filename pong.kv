#:kivy 2.3.0


<PongGame>:
    ball: pong_ball
    player1: player1
    player2: player2

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
    
    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center
    
    Player:
        id: player1
        x: root.x
        center_y: root.center_y
    
    Player:
        id: player2
        x: root.width - self.width
        center_y: root.center_y
        


<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Player>:
    size: 10, 100
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
